<!DOCTYPE html>
<html lang="en" class="govuk-template">
  <head>
    <%= page_title %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= tag :meta, name: "viewport", content: "width=device-width, initial-scale=1" %>
    <%= tag :meta, property: "og:image", content: asset_path("images/govuk-opengraph-image.png") %>
    <%= tag :meta, name: "theme-color", content: "#0b0c0c" %>

    <%= favicon_link_tag asset_path("images/favicon.ico") %>
    <%= favicon_link_tag asset_path("images/govuk-mask-icon.svg"), rel: "mask-icon", type: "image/svg", color: "#0b0c0c" %>
    <%= favicon_link_tag asset_path("images/govuk-apple-touch-icon.png"), rel: "apple-touch-icon", type: "image/png" %>
    <%= favicon_link_tag asset_path("images/govuk-apple-touch-icon-152x152.png"), rel: "apple-touch-icon", type: "image/png", size: "152x152" %>
    <%= favicon_link_tag asset_path("images/govuk-apple-touch-icon-167x167.png"), rel: "apple-touch-icon", type: "image/png", size: "167x167" %>
    <%= favicon_link_tag asset_path("images/govuk-apple-touch-icon-180x180.png"), rel: "apple-touch-icon", type: "image/png", size: "180x180" %>

    <%= javascript_include_tag "application", defer: true %>
    <%= stylesheet_link_tag "application" %>

    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','GTM-5PVGN2P');</script>
    <!-- End Google Tag Manager -->
  </head>

  <body class="govuk-template__body">
    <script>
      document.body.className = ((document.body.className) ? document.body.className + " js-enabled" : "js-enabled");
    </script>

    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5PVGN2P"
        height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <%= govuk_skip_link %>

    <%= govuk_header(service_name: "Get help with child arrangements")  %>

    <div class="govuk-width-container">
      <%= govuk_phase_banner(tag: { text: "Beta" }, text: "This is the first version of the guide") %>

      <%= govuk_breadcrumbs(breadcrumbs: { "Home" => "/", t("#{controller_name}.#{action_name}.title") => false }) unless action_name == "homepage" %>

      <main class="govuk-main-wrapper" id="main-content" role="main">
        <%= yield %>
      </main>
    </div>

    <%= govuk_footer(meta_items_title: "Support links", meta_items:
      {
        t("about.accessibility.title") => about_accessibility_path,
        t("about.cookies.title") => about_cookies_path,
        t("about.privacy.title") => about_privacy_path,
        t("about.terms-conditions.title") => about_terms_conditions_path
      })
    %>
  </body>
</html>
