<%= govuk_notification_banner(title_text: "Important") do %>
  <% link_text = t("banner.#{type}_text")%>
  <% link_href = t("banner.#{type}_path")%>
  <h2 class="govuk-notification-banner__heading"><%= t("banner.pre_text") %></h2>
  <p class="govuk-body">
    <%= govuk_link_to link_text, link_href %>
  </p>
<% end %>
